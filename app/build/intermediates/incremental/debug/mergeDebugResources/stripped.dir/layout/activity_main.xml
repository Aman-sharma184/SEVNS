<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:paddingBottom="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="332dp"
                 android:layout_height="332dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border"/>

            <Button
                android:id="@+id/btnUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#F43232"
                android:drawablePadding="12dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="ðŸš¨ Report Accident"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btntrackCase"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#14A9a7"
                android:text="Track Case"
                android:textColor="#fff"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHospital"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#1A7DD6"
                    android:elevation="4dp"
                    android:text="Hospital Login"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnAmbulance"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:backgroundTint="#145997"
                    android:elevation="4dp"
                    android:text="Driver Login"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Click Below for Registration " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHospitalRegister"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#1A7DD6"
                    android:elevation="4dp"
                    android:text="Hospital Register"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnDriverRegister"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:backgroundTint="#145997"
                    android:elevation="4dp"
                    android:text="Driver Register"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>